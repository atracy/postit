<h4>You're looking at <%= @post.title %></h4>
<p>URL: <%= @post.url %></p>
<p>Description: <%= @post.description %></p>

<p>
<%= render 'shared/errors', obj: @comment %>
  <%= form_for [@post, @comment] do |f| %>
    <%= f.label :body %>
    <%= f.text_area :body %>
    <br>
    <%= f.submit "Create comment", class: 'btn btn-primary' %>
  <% end %>
  <h4>Comments:</h4>
  <ol>
  <% @post.comments.each do |c| %>
    <li><%= c.body %></li>
  <% end %>
  </ol>
</p>
