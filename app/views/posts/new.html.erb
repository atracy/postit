<h4>Creating a new Post object</h4>

<form action='/posts/' method='post'>
  Title:
  <input type='text' name='title'>
  <br/>
  <input type='submit'>
</form>

<h5>Non-Model backed form helpers</h5>
<%= form_tag '/posts' do %>
  <%= label_tag :title %>
  <%= text_field_tag :title %>
  <br/>
  <%= label_tag :url %>
  <%= text_field_tag :url %>
  <br/>
  <%= submit_tag "Create Post" %>
  <% end %>

<h5>Model backed form helpers</h5>
<% if @post.errors.any? %>
  <%= @post.errors.full_messages.join('c ') %>
<% end %>
<%= form_for @post do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <br/>
    <%= f.label :url %>
    <%= f.text_field :url %>
    <br/>
    <%= f.submit "Create Post" %>
<% end %>
